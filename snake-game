            diff: "ç®€å•",     // éš¾åº¦åç§°
            snakeColor: 'pink' // é»˜è®¤é¢œè‰²
        };
        let gameLoop = null;
        let snake = [];
        let food = {}; 
        let dx = 0;
        let dy = -1;
        let score = 0;
        let highestScore = 0;
        let snakePath = [];
        // æš‚åœçŠ¶æ€æ ‡è¯†
        let isPaused = false;
        const colorNameMap = {
            pink: "ç²‰è‰²",
            blue: "è“è‰²",
            yellow: "é»„è‰²",
            green: "ç»¿è‰²"
        };
        // è·¯çº¿å›¾ç”»å¸ƒä¸Šä¸‹æ–‡
        let routeCtx = null;
        const gridSize = 20;
        const cellSize = 400 / gridSize; // è·¯çº¿å›¾ç”»å¸ƒå’Œæ¸¸æˆç”»å¸ƒåŒå°ºå¯¸

        // é£Ÿç‰©é…ç½®è¡¨
        const foodConfigs = [
            {
                type: "strawberry",
                score: 1,
                emoji: "ğŸ“",
                draw: (ctx, x, y, size) => {
                    const gradient = ctx.createRadialGradient(x + size/2, y + size/2, 0, x + size/2, y + size/2, size/2);
                    gradient.addColorStop(0, '#f87171');
                    gradient.addColorStop(1, '#ef4444');
                    ctx.fillStyle = gradient;
                    ctx.beginPath();
                    ctx.arc(x + size/2, y + size/2 + size/6, size/2, 0, Math.PI);
                    ctx.lineTo(x + size/2, y);
                    ctx.closePath();
                    ctx.fill();
                    ctx.fillStyle = '#fff';
                    const seedCount = 8;
                    for (let i = 0; i < seedCount; i++) {
                        const angle = (i / seedCount) * Math.PI;
                        const seedX = x + size/2 + (size/3) * Math.cos(angle);
                        const seedY = y + size/2 + (size/3) * Math.sin(angle) + size/8;
                        ctx.beginPath();
                        ctx.arc(seedX, seedY, size/15, 0, Math.PI * 2);
                        ctx.fill();
                    }
                    ctx.fillStyle = '#4ade80';
                    ctx.beginPath();
                    ctx.moveTo(x + size/2, y);
                    ctx.quadraticCurveTo(x + size/4, y - size/6, x + size/3, y + size/8);
                    ctx.quadraticCurveTo(x + size/2, y + size/12, x + size/2, y);
                    ctx.fill();
                    ctx.beginPath();
                    ctx.moveTo(x + size/2, y);
                    ctx.quadraticCurveTo(x + size*3/4, y - size/6, x + size*2/3, y + size/8);
                    ctx.quadraticCurveTo(x + size/2, y + size/12, x + size/2, y);
                    ctx.fill();
                }
            },
            {
                type: "apple",
                score: 2,
                emoji: "ğŸ",
                draw: (ctx, x, y, size) => {
                    const gradient = ctx.createRadialGradient(x + size/3, y + size/3, 0, x + size/2, y + size/2, size/2);
                    gradient.addColorStop(0, '#fbbf24');
                    gradient.addColorStop(1, '#dc2626');
                    ctx.fillStyle = gradient;
                    ctx.beginPath();
                    ctx.arc(x + size/2, y + size/2, size/2, 0, Math.PI * 2);
                    ctx.fill();
                    ctx.fillStyle = '#166534';
                    ctx.fillRect(x + size/2 - size/10, y + size/8, size/5, size/3);
                    ctx.fillStyle = '#22c55e';
                    ctx.beginPath();
                    ctx.moveTo(x + size/2, y + size/8);
                    ctx.quadraticCurveTo(x + size*3/4, y, x + size*2/3, y + size/5);
                    ctx.quadraticCurveTo(x + size/2, y + size/6, x + size/2, y + size/8);
                    ctx.fill();
                }
            },
            {
                type: "orange",
                score: 3,
                emoji: "ğŸŠ",
                draw: (ctx, x, y, size) => {
                    const gradient = ctx.createRadialGradient(x + size/3, y + size/3, 0, x + size/2, y + size/2, size/2);
                    gradient.addColorStop(0, '#fef08a');
                    gradient.addColorStop(1, '#f97316');
                    ctx.fillStyle = gradient;
                    ctx.beginPath();
                    ctx.arc(x + size/2, y + size/2, size/2, 0, Math.PI * 2);
                    ctx.fill();
                    ctx.strokeStyle = 'rgba(249, 115, 22, 0.3)';
                    ctx.lineWidth = 1;
                    for (let i = 0; i < 8; i++) {
                        const angle = (i / 8) * Math.PI * 2;
                        ctx.beginPath();
                        ctx.moveTo(x + size/2, y + size/2);
                        ctx.lineTo(x + size/2 + (size/2 - 2) * Math.cos(angle), y + size/2 + (size/2 - 2) * Math.sin(angle));
                        ctx.stroke();
                    }
                }
            },
            {
                type: "blueberry",
                score: 4,
                emoji: "ğŸ«",
                draw: (ctx, x, y, size) => {
                    const gradient = ctx.createRadialGradient(x + size/3, y + size/3, 0, x + size/2, y + size/2, size/2);
                    gradient.addColorStop(0, '#bfdbfe');
                    gradient.addColorStop(1, '#3b82f6');
                    ctx.fillStyle = gradient;
                    ctx.beginPath();
                    ctx.arc(x + size/2, y + size/2, size/2, 0, Math.PI * 2);
                    ctx.fill();
                    ctx.fillStyle = 'rgba(255, 255, 255, 0.4)';
                    ctx.beginPath();
                    ctx.arc(x + size/3, y + size/3, size/6, 0, Math.PI * 2);
                    ctx.fill();
                }
            }
        ];

        // DOMå…ƒç´ 
        const gameHome = document.getElementById('game-home');
        const gamePlay = document.getElementById('game-play');
        const c = document.getElementById('g');
        const ctx = c.getContext('2d');
        const scoreElement = document.getElementById('s');
        const overElement = document.getElementById('over');
        const pausePanel = document.getElementById('pause-panel');
        const finalScoreElement = document.getElementById('final-score');
        const highestScoreElement = document.getElementById('highest-score');
        const highestInGameElement = document.getElementById('highest-in-game');
        const rankingListElement = document.getElementById('ranking-list');
        const diffBtns = document.querySelectorAll('.diff-btn');
        const colorBtns = document.querySelectorAll('.color-btn');
        const startBtn = document.querySelector('.start-btn');
        const aiCongratsModal = document.getElementById('ai-congrats');
        const routeInfoElement = document.getElementById('route-info');
        const routeMapCanvas = document.getElementById('route-map-canvas');

        // åˆå§‹åŒ–è·¯çº¿å›¾ç”»å¸ƒ
        window.onload = function() {
            routeCtx = routeMapCanvas.getContext('2d');
        }

        // åˆå§‹åŒ–æ’åå±•ç¤º
        initRanking();

        // éš¾åº¦é€‰æ‹©
        diffBtns.forEach(btn => {
            btn.addEventListener('click', () => {
                diffBtns.forEach(b => b.classList.remove('active'));
                btn.classList.add('active');
                gameConfig.speed = parseInt(btn.dataset.speed);
                gameConfig.diff = btn.dataset.diff;
            });
        });

        // é¢œè‰²é€‰æ‹©
        colorBtns.forEach(btn => {
            btn.addEventListener('click', () => {
                colorBtns.forEach(b => b.classList.remove('active'));
                btn.classList.add('active');
                gameConfig.snakeColor = btn.dataset.color;
            });
        });

        // å¼€å§‹æ¸¸æˆ
        startBtn.addEventListener('click', () => {
            gameHome.style.display = 'none';
            gamePlay.style.display = 'flex';
            highestInGameElement.innerText = highestScore;
            initGame();
        });

        // è¿”å›é¦–é¡µï¼ˆå…¨å±€é€šç”¨ï¼‰
        function backToHome() {
            clearInterval(gameLoop);
            overElement.style.display = 'none';
            pausePanel.style.display = 'none';
            aiCongratsModal.style.display = 'none';
            gamePlay.style.display = 'none';
            gameHome.style.display = 'flex';
            // é‡ç½®çŠ¶æ€
            isPaused = false;
            diffBtns.forEach(b => b.classList.remove('active'));
            colorBtns.forEach(b => b.classList.remove('active'));
            document.querySelector('.diff-btn[data-speed="200"]').classList.add('active');
            document.querySelector('.color-btn[data-color="pink"]').classList.add('active');
            gameConfig.speed = 200;
            gameConfig.diff = "ç®€å•";
            gameConfig.snakeColor = 'pink';
            initRanking();
        }

        // æš‚åœ/ç»§ç»­æ¸¸æˆåˆ‡æ¢
        function togglePause() {
            if (isPaused) {
                // ç»§ç»­æ¸¸æˆ
                gameLoop = setInterval(draw, gameConfig.speed);
                pausePanel.style.display = 'none';
                isPaused = false;
                document.querySelector('.pause-btn').innerText = "æš‚åœ â¸ï¸";
            } else {
                // æš‚åœæ¸¸æˆ
                clearInterval(gameLoop);
                pausePanel.style.display = 'flex';
                isPaused = true;
                document.querySelector('.pause-btn').innerText = "ç»§ç»­ â–¶ï¸";
            }
        }

        // åˆå§‹åŒ–æ¸¸æˆ
        function initGame() {
            snake = [{x:10, y:10}, {x:10, y:11}];
            snakePath = [{x:10, y:10}];
            generateRandomFood();
            dx = 0;
            dy = -1;
            score = 0;
            scoreElement.innerText = '0';
            isPaused = false;
            pausePanel.style.display = 'none';
            
            if (gameLoop) clearInterval(gameLoop);
            gameLoop = setInterval(draw, gameConfig.speed);
            document.addEventListener('keydown', handleKeydown);
        }

        // é”®ç›˜äº‹ä»¶å¤„ç†
        function handleKeydown(e) {
            // æš‚åœçŠ¶æ€ä¸‹ä¸å“åº”æ–¹å‘é”®
            if (isPaused) return;
            switch(e.key) {
                case 'ArrowUp':
                    if (dy !== 1) { dx = 0; dy = -1; }
                    break;
                case 'ArrowDown':
                    if (dy !== -1) { dx = 0; dy = 1; }
                    break;
                case 'ArrowLeft':
                    if (dx !== 1) { dx = -1; dy = 0; }
                    break;
                case 'ArrowRight':
                    if (dx !== -1) { dx = 1; dy = 0; }
                    break;
            }
        }

        // ç”Ÿæˆéšæœºé£Ÿç‰©
        function generateRandomFood() {
            let newFood;
            const randomFoodType = foodConfigs[Math.floor(Math.random() * foodConfigs.length)];
            while (!newFood || snake.some(part => part.x === newFood.x && part.y === newFood.y)) {
                newFood = {
                    x: Math.floor(Math.random() * gridSize),
                    y: Math.floor(Math.random() * gridSize),
                    type: randomFoodType.type,
                    score: randomFoodType.score,
                    draw: randomFoodType.draw
                };
            }
            food = newFood;
        }

        // æ ¸å¿ƒç»˜åˆ¶å‡½æ•°
        function draw() {
            let head = { x: snake[0].x + dx, y: snake[0].y + dy };

            if (head.x < 0 || head.x >= gridSize || head.y < 0 || head.y >= gridSize || snake.some(part => part.x === head.x && part.y === head.y)) {
                clearInterval(gameLoop);
                finalScoreElement.innerText = score;
                saveScore(score, gameConfig.diff);
                overElement.style.display = 'flex';
                return;
            }

            snake.unshift(head);
            snakePath.push({x: head.x, y: head.y});

            if (head.x === food.x && head.y === food.y) {
                score += food.score;
                scoreElement.innerText = score;
                generateRandomFood();
            } else {
                snake.pop();
            }

            ctx.fillStyle = '#faf6fb';
            ctx.fillRect(0, 0, c.width, c.height);

            const theme = colorThemes[gameConfig.snakeColor];
            ctx.strokeStyle = theme.grid;
            ctx.lineWidth = 1;
            for (let i = 0; i <= gridSize; i++) {
                ctx.beginPath();
                ctx.moveTo(i * cellSize, 0);
                ctx.lineTo(i * cellSize, c.height);
                ctx.stroke();
                ctx.beginPath();
                ctx.moveTo(0, i * cellSize);
                ctx.lineTo(c.width, i * cellSize);
                ctx.stroke();
            }

            snake.forEach((part, index) => {
                const x = part.x * cellSize;
                const y = part.y * cellSize;
                if (index === 0) {
                    const gradient = ctx.createRadialGradient(x + cellSize/2, y + cellSize/2, 0, x + cellSize/2, y + cellSize/2, cellSize/2);
                    gradient.addColorStop(0, theme.head1);
                    gradient.addColorStop(1, theme.head2);
                    ctx.fillStyle = gradient;
                    ctx.beginPath();
                    ctx.roundRect(x + 2, y + 2, cellSize - 4, cellSize - 4, 12);
                    ctx.fill();
                    ctx.fillStyle = '#fff';
                    const eyeSize = cellSize / 6;
                    let eye1X, eye1Y, eye2X, eye2Y;
                    if (dx === 1) {
                        eye1X = x + cellSize * 0.6; eye1Y = y + cellSize * 0.3;
                        eye2X = x + cellSize * 0.6; eye2Y = y + cellSize * 0.7;
                    } else if (dx === -1) {
                        eye1X = x + cellSize * 0.4; eye1Y = y + cellSize * 0.3;
                        eye2X = x + cellSize * 0.4; eye2Y = y + cellSize * 0.7;
                    } else if (dy === -1) {
                        eye1X = x + cellSize * 0.3; eye1Y = y + cellSize * 0.4;
                        eye2X = x + cellSize * 0.7; eye2Y = y + cellSize * 0.4;
                    } else {
                        eye1X = x + cellSize * 0.3; eye1Y = y + cellSize * 0.6;
                        eye2X = x + cellSize * 0.7; eye2Y = y + cellSize * 0.6;
                    }
                    ctx.beginPath();
                    ctx.arc(eye1X, eye1Y, eyeSize, 0, Math.PI * 2);
                    ctx.arc(eye2X, eye2Y, eyeSize, 0, Math.PI * 2);
                    ctx.fill();
                    ctx.fillStyle = '#000';
                    ctx.beginPath();
                    ctx.arc(eye1X, eye1Y, eyeSize/2, 0, Math.PI * 2);
                    ctx.arc(eye2X, eye2Y, eyeSize/2, 0, Math.PI * 2);
                    ctx.fill();
                } else {
                    const gradient = ctx.createLinearGradient(x, y, x + cellSize, y + cellSize);
                    gradient.addColorStop(0, theme.body1);
                    gradient.addColorStop(1, theme.body2);
                    ctx.fillStyle = gradient;
                    ctx.beginPath();
                    ctx.roundRect(x + 3, y + 3, cellSize - 6, cellSize - 6, 10);
                    ctx.fill();
                    ctx.fillStyle = theme.dot;
                    ctx.beginPath();
                    ctx.arc(x + cellSize/2, y + cellSize/2, cellSize/8, 0, Math.PI * 2);
                    ctx.fill();
                }
            });

            food.draw(ctx, food.x * cellSize, food.y * cellSize, cellSize - 8);
        }

        // æ’åç›¸å…³å‡½æ•°
        function initRanking() {
            const rankings = getRankings();
            highestScore = rankings.length > 0 ? rankings[0].score : 0;
            highestScoreElement.innerText = highestScore;
            highestInGameElement.innerText = highestScore;
            rankingListElement.innerHTML = '';
            if (rankings.length === 0) {
                rankingListElement.innerHTML = `<li class="ranking-item"><span class="ranking-num">1</span><span class="ranking-desc">æš‚æ— è®°å½•</span><span class="ranking-score">0</span></li>`;
            } else {
                rankings.forEach((item, index) => {
                    if (index >= 5) return;
                    rankingListElement.innerHTML += `<li class="ranking-item"><span class="ranking-num">${index + 1}</span><span class="ranking-desc">${item.time} (${item.diff})</span><span class="ranking-score">${item.score}</span></li>`;
                });
            }
        }

        function getRankings() {
            const rankingsStr = localStorage.getItem('snakeGameRankings');
            if (!rankingsStr) return [];
            return JSON.parse(rankingsStr).sort((a, b) => b.score - a.score);
        }

        function saveScore(score, diff) {
            if (score === 0) return;
            const now = new Date();
            const timeStr = `${now.getMonth() + 1}æœˆ${now.getDate()}æ—¥ ${now.getHours()}:${String(now.getMinutes()).padStart(2, '0')}`;
            let rankings = getRankings();
            rankings.push({ score, diff, time: timeStr });
            rankings = rankings.sort((a, b) => b.score - a.score).slice(0, 10);
            localStorage.setItem('snakeGameRankings', JSON.stringify(rankings));
            if (score > highestScore) {
                highestScore = score;
                highestScoreElement.innerText = highestScore;
                highestInGameElement.innerText = highestScore;
            }
        }

        // ========== è·¯çº¿å›¾ç»˜åˆ¶æ ¸å¿ƒå‡½æ•° ==========
        function showRouteMap() {
            overElement.style.display = 'none';
            aiCongratsModal.style.display = 'flex';
            // å±•ç¤ºè·¯çº¿ä¿¡æ¯
            const snakeColorName = colorNameMap[gameConfig.snakeColor];
            routeInfoElement.innerText = `ğŸ ${snakeColorName}å°è›‡å…±èµ°äº† ${snakePath.length} æ­¥ï¼Œè·å¾— ${score} åˆ†ï¼ˆ${gameConfig.diff}éš¾åº¦ï¼‰`;
            // ç»˜åˆ¶è·¯çº¿å›¾
            drawRouteMap();
        }

        function closeRouteMap() {
            aiCongratsModal.style.display = 'none';
        }

        function redrawRouteMap() {
            drawRouteMap();
        }

        // ç»˜åˆ¶è´ªåƒè›‡è¡Œé©¶è·¯çº¿å›¾
        function drawRouteMap() {
            if (!routeCtx) return;
            const theme = colorThemes[gameConfig.snakeColor];
            // æ¸…ç©ºè·¯çº¿å›¾ç”»å¸ƒ
            routeCtx.fillStyle = '#faf6fb';
            routeCtx.fillRect(0, 0, routeMapCanvas.width, routeMapCanvas.height);
            
            // ç»˜åˆ¶ç½‘æ ¼çº¿
            routeCtx.strokeStyle = theme.grid;
            routeCtx.lineWidth = 1;
            for (let i = 0; i <= gridSize; i++) {
                routeCtx.beginPath();
                routeCtx.moveTo(i * cellSize, 0);
                routeCtx.lineTo(i * cellSize, routeMapCanvas.height);
                routeCtx.stroke();
                routeCtx.beginPath();
                routeCtx.moveTo(0, i * cellSize);
                routeCtx.lineTo(routeMapCanvas.width, i * cellSize);
                routeCtx.stroke();
            }

            // ç»˜åˆ¶è¡Œé©¶è·¯çº¿ï¼ˆè½¨è¿¹çº¿ï¼‰
            routeCtx.strokeStyle = theme.head2;
            routeCtx.lineWidth = 3;
            routeCtx.lineCap = 'round';
            routeCtx.beginPath();
            snakePath.forEach((point, index) => {
                const x = point.x * cellSize + cellSize/2;
                const y = point.y * cellSize + cellSize/2;
                if (index === 0) {
                    routeCtx.moveTo(x, y);
                } else {
                    routeCtx.lineTo(x, y);
                }
            });
            routeCtx.stroke();

            // æ ‡è®°èµ·ç‚¹ï¼ˆç»¿è‰²ï¼‰å’Œç»ˆç‚¹ï¼ˆçº¢è‰²ï¼‰
            // èµ·ç‚¹
            const startPoint = snakePath[0];
            const startX = startPoint.x * cellSize + cellSize/2;
            const startY = startPoint.y * cellSize + cellSize/2;
            routeCtx.fillStyle = '#22c55e';
            routeCtx.beginPath();
            routeCtx.arc(startX, startY, 6, 0, Math.PI * 2);
            routeCtx.fill();
            routeCtx.fillStyle = '#fff';
            routeCtx.fillText('èµ·ç‚¹', startX + 10, startY + 5);

            // ç»ˆç‚¹
            const endPoint = snakePath[snakePath.length - 1];
            const endX = endPoint.x * cellSize + cellSize/2;
            const endY = endPoint.y * cellSize + cellSize/2;
            routeCtx.fillStyle = '#ef4444';
            routeCtx.beginPath();
            routeCtx.arc(endX, endY, 6, 0, Math.PI * 2);
            routeCtx.fill();
            routeCtx.fillStyle = '#fff';
            routeCtx.fillText('ç»ˆç‚¹', endX + 10, endY + 5);
        }

        // é¢œè‰²é…ç½®è¡¨
        const colorThemes = {
            pink: { head1: '#f472b6', head2: '#db2777', body1: '#fce7f3', body2: '#f472b6', dot: 'rgba(219, 39, 119, 0.3)', grid: 'rgba(219, 39, 119, 0.08)' },
            blue: { head1: '#60a5fa', head2: '#3b82f6', body1: '#dbeafe', body2: '#60a5fa', dot: 'rgba(59, 130, 246, 0.3)', grid: 'rgba(59, 130, 246, 0.08)' },
            yellow: { head1: '#fde047', head2: '#eab308', body1: '#fefce8', body2: '#fde047', dot: 'rgba(234, 179, 8, 0.3)', grid: 'rgba(234, 179, 8, 0.08)' },
            green: { head1: '#86efac', head2: '#22c55e', body1: '#ecfdf5', body2: '#86efac', dot: 'rgba(34, 197, 94, 0.3)', grid: 'rgba(34, 197, 94, 0.08)' }
        };
    </script>
